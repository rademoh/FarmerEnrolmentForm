<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
   >
    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/createadmin" />

    </RelativeLayout>


    <!-- Content will go here -->
    <LinearLayout

        android:layout_marginLeft="130dp"
        android:layout_marginRight="130dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/header"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Personal Details ::"
            android:textStyle="bold"
            android:id="@+id/textView11"
            style="bold" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fullname"
        android:background="@drawable/textfieldimage"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:textColor="#e2e3df"
        android:singleLine="true"
        android:hint="Full Name"
        android:textColorHint="#445523"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/username"
            android:background="@drawable/textfieldimage"
            android:padding="20dp"
            android:textColor="#e2e3df"
            android:singleLine="true"
            android:hint="Username"
            android:textColorHint="#445523"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/password"
            android:background="@drawable/textfieldimage"
            android:padding="20dp"
            android:textColor="#e2e3df"
            android:singleLine="true"
            android:hint="Password"
            android:textColorHint="#445523"
            android:inputType="textPassword" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/confirmpassword"
            android:background="@drawable/textfieldimage"
            android:padding="20dp"
            android:textColor="#e2e3df"
            android:singleLine="true"
            android:hint="Confirm Password"
            android:textColorHint="#445523"
            android:inputType="textPassword" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mobilenumber"
            android:background="@drawable/textfieldimage"
            android:padding="20dp"
            android:textColor="#e2e3df"
            android:singleLine="true"
            android:hint="Mobile Number"
            android:textColorHint="#445523"

            android:inputType="number"
            android:maxLength="10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold"
            android:text="Centre Details ::"
            android:id="@+id/textView12"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/state"
            android:layout_marginTop="5dp"
            android:padding="10dp"
            android:textColor="#e2e3df"
            android:background="@drawable/dropdown"
            />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lga"
            android:padding="10dp"
            android:textColor="#e2e3df"
            android:background="@drawable/dropdown"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/createadmin"
            android:background="@drawable/crateadminbutton"
            android:layout_marginTop="10dp" />

        <!-- Link to Login Screen -->
        <TextView android:id="@+id/link_to_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:text="Already has account! Login here"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>
