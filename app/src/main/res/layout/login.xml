<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground">
    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:gravity="center" >

    </RelativeLayout>

    <!-- Footer aligned to bottom -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="35dp"
        >

        <TextView
            android:id="@+id/txet"
            android:layout_width="300dp"
            android:layout_height="75dp"
            android:text="@string/version_number"
            android:gravity="center"
            android:textColor="@color/whitetransparent"
            />
    </LinearLayout>
    <!-- Content will go here -->
    <LinearLayout
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="125dp"
        android:layout_marginRight="125dp"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/btnLogin"
            android:layout_marginTop="2dp"
            android:background="@drawable/loginbutton"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="16sp"
            android:text="I don't have account? Register here"
            android:id="@+id/link_to_register"
            android:layout_marginTop="5dp"
            android:padding="20dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2" />



    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/adminlogin"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView3" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eusername"
        android:background="@drawable/textfieldimage"
        android:padding="20dp"
        android:textColor="#e2e3df"
        android:singleLine="true"
        android:hint="Username"
        android:textColorHint="#445523"
        android:layout_marginBottom="52dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignLeft="@+id/footer"
        android:layout_alignStart="@+id/footer"
        android:layout_alignRight="@+id/footer"
        android:layout_alignEnd="@+id/footer" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/epassword"
        android:background="@drawable/textfieldimage"
        android:padding="20dp"
        android:textColor="#e2e3df"
        android:singleLine="true"
        android:hint="Password"
        android:textColorHint="#445523"
        android:inputType="textPassword"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignLeft="@+id/eusername"
        android:layout_alignStart="@+id/eusername"
        android:layout_alignRight="@+id/eusername"
        android:layout_alignEnd="@+id/eusername" />


</RelativeLayout>