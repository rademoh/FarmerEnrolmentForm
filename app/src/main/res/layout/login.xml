<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground">
    <!-- Header aligned to top -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:gravity="center" >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/adminlogin" />
    </RelativeLayout>
    <!-- Content will go here -->
    <LinearLayout
        android:layout_below="@+id/header"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:id="@+id/linearLayout2">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eusername"
        android:background="@drawable/textfieldimage"
        android:layout_marginTop="25dp"
        android:padding="20dp"
        android:textColor="#e2e3df"
        android:singleLine="true"
        android:hint="Username"
        android:textColorHint="#445523"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/epassword"
            android:background="@drawable/textfieldimage"
            android:padding="20dp"
            android:textColor="#e2e3df"
            android:singleLine="true"
            android:hint="Password"
            android:textColorHint="#445523"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="75dp"
            android:id="@+id/btnLogin"
            android:layout_marginTop="2dp"
            android:background="@drawable/loginbutton"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="I don't have account? Register here"
            android:id="@+id/link_to_register"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignLeft="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2" />



    </LinearLayout>




</RelativeLayout>